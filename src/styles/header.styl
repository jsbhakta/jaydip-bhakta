.Header {
  margin-bottom: 0;
  padding: 0 20px;
  min-width: 320px;

  &-title {
    margin-top: 5px;
    font-size: 24px;
    font-family: "Orbitron", sans-serif;
    font-weight: bold;
  }

  &-session {
    padding-top: 11px;
  }

  &-hello {
    display: inline;
    margin-right: 1em;
  }

  &-title, &-hello {
    color: #fff;
  }
}
